<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'>

    <ui:with field='iconClass' type='java.lang.String'/>
    <ui:with field='label' type='java.lang.String'/>
    <ui:with field='description' type='java.lang.String'/>
    <ui:with field='link' type='java.lang.String'/>


    <div class="instanceBox">
      <div class="{iconClass}"/>
      <div>
        <h4><a href="{link}"><ui:text from="{label}"/></a></h4>
        <p><small><ui:text from="{description}"/></small></p>
      </div>
    </div>
</ui:UiBinder>