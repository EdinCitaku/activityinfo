<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:ai="urn:import:org.activityinfo.ui.client.widget"
        >

  <ui:with field="i18n" type="org.activityinfo.i18n.shared.UiConstants"/>

  <g:HTMLPanel styleName="input-group">
    <ai:TextBox readOnly="true" ui:field="labelBox"/>
    <div class="input-group-addon" style="padding: 0px">
      <ai:Button style="DEFAULT" ui:field="changeButton">
        <ui:text from='{i18n.select}'/>
      </ai:Button>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>