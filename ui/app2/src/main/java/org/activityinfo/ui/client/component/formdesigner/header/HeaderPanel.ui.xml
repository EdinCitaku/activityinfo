<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >

  <ui:with field="i18n" type="org.activityinfo.i18n.shared.UiConstants"/>
  <ui:with field="style" type="org.activityinfo.ui.client.component.formdesigner.FormDesignerStyles"/>

  <g:FocusPanel ui:field="focusPanel" addStyleNames="{style.widgetContainer} {style.headerContainer}">
    <g:HTMLPanel width="100%">
      <h3 ui:field="header"></h3>
      <br/>
      <g:Label ui:field="description"/>
    </g:HTMLPanel>
  </g:FocusPanel>
</ui:UiBinder>