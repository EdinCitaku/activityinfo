<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:cell='urn:import:com.google.gwt.user.cellview.client'
             xmlns:a="urn:import:org.activityinfo.ui.client.widget"
        >

  <ui:with field="i18n" type="org.activityinfo.i18n.shared.UiConstants"/>

  <g:DockLayoutPanel unit="EM" width="100%" height="100%" ui:field="dockLayout">
    <g:center>
      <g:HTMLPanel addStyleNames="gwt-Map">
        <div style="width:100%; height: 100%; position: relative;" ui:field="mapContainer">
        </div>
      </g:HTMLPanel>
    </g:center>

    <g:west size="25">
      <g:HTMLPanel>
        <div style="margin: 10px;">
          <p>
            <ui:text from="{i18n.chooseReferenceByGeoPoint}"/>
          </p>

          <p>
            <b>
              <ui:text from='{i18n.filterByName}'/>
            </b>
          </p>
          <a:TextBox ui:field="filterBox" width="100%"/>

          <p>
            <b>
              <ui:text from='{i18n.matchedReferences}'/>
            </b>
          </p>

          <cell:CellTable ui:field="table"/>
        </div>
      </g:HTMLPanel>
    </g:west>
  </g:DockLayoutPanel>

</ui:UiBinder>