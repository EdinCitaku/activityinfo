<module rename-to="App">

  <inherits name='com.google.gwt.user.User'/>
  <inherits name="com.google.gwt.i18n.I18N"/>
  <inherits name="com.google.gwt.logging.Logging"/>
  
  <inherits name="org.activityinfo.i18n.I18n"/>
  <inherits name="org.activityinfo.ui.Style"/>
  <inherits name="org.activityinfo.ui.Icons"/>

  <set-property name="gwt.logging.popupHandler" value="DISABLED"/>

  <set-property name="user.agent" value="ie8,ie9,ie10,safari,gecko1_8"/>
  <extend-property name="locale" values="ar"/>

  <define-linker name="appcache" class="org.activityinfo.ui.rebind.AppCacheLinker"/>
  <add-linker name="appcache" />


  <entry-point class="org.activityinfo.ui.client.App"/>

  <!-- Include generated sources -->
  <source path='client'/>
  <source path="shared"/>
</module>
