             xmlns:f="urn:import:org.activityinfo.ui.client.frame"
             xmlns:i="urn:import:org.activityinfo.ui.icons">

  <ui:with field="i18n" type="org.activityinfo.i18n.shared.UiConstants"/>

  <g:HTMLPanel styleName="btn-group">
    <g:Button ui:field="button" styleName="btn btn-default dropdown-toggle tp-icon"/>
    <div class="dropdown-menu dropdown-menu-head pull-right">
      <ul ui:field="listElement" class="dropdown-list gen-list">
        <li><a href="#">English</a></li>
        <li><a href="#">Français</a></li>
        <li><a href="#">العربية</a></li>
        <li><a href="#"><ui:text from="{i18n.userProfile}"/></a></li>
