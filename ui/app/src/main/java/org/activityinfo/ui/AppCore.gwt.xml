<module>

    <inherits name='com.google.gwt.user.User' />
    <inherits name='com.google.gwt.activity.Activity'/>
    <inherits name='com.google.gwt.place.Place'/>

    <!-- Include only the GXT modules we need -->
    <inherits name='com.sencha.gxt.ui.GXT' />
    <inherits name='com.sencha.gxt.theme.triton.Theme' />

    <inherits name="org.activityinfo.model.Model"/>
    <inherits name="org.activityinfo.io.Match"/>
    <inherits name="org.activityinfo.store.query.Query"/>
    <inherits name="org.activityinfo.Analysis"/>
    <inherits name="org.activityinfo.api.ApiClient"/>

    <!-- Avoid unsupported RTL layout even when using RTL text -->
    <inherits name="org.activityinfo.i18n.ArabicLTR"/>

    <inherits name="org.activityinfo.ui.Icons"/>
    <set-configuration-property name="CssResource.conversionMode" value="strict" />

    <inherits name="org.activityinfo.IndexedDB"/>
    <inherits name="org.activityinfo.Storage"/>

    <inherits name="org.activityinfo.ui.codemirror.CodeMirror"/>


    <!-- Specify the paths for translatable code -->
    <source path='client'/>
    <source path='shared'/>


    <!-- Configure AppCache -->
    <inherits name="org.realityforge.gwt.appcache.Appcache"/>

    <!-- Enable the linker -->

    <inherits name="org.realityforge.gwt.appcache.linker.Linker"/>

    <!-- enable the linker that generates the manifest -->
    <add-linker name="appcache"/>

    <!-- configure all the static files not managed by the GWT compiler -->
    <extend-configuration-property name="appcache_static_files" value="/about/assets/css/style.css"/>
    <extend-configuration-property name="appcache_static_files" value="/about/assets/images/logo-activityinfo.png"/>
    <extend-configuration-property name="appcache_static_files" value="/about/assets/images/bdd-logo.svg"/>

    <!-- configure fallback rules used by the client when offline -->
    <extend-configuration-property name="appcache_fallback_files" value="/login /app/offline"/>


</module>
