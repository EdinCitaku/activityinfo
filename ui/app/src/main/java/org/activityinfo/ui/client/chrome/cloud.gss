
@external cloud-icon, cloud-bg, offline-bar, fetching-icon;


/** Default */

.cloud-bg {
    fill: white;
}

.offline-bar {
    visibility: hidden;
}

.fetching-icon {
    visibility: hidden;
}


/** When OFFLINE */

.offline .offline-bar {
    visibility: visible;
}

/* When ONLINE */

.online .offline-bar {
    display: none;
}

.online .cloud-bg {
    fill: white;
}

/** When loading over the network **/

.fetching .fetching-icon {
    visibility: visible;
}
