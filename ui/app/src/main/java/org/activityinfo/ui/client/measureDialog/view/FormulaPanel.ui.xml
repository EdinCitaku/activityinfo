<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
             xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
             xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
             xmlns:measure="urn:import:org.activityinfo.ui.client.measureDialog.view"
             xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
>

    <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData">
        <ui:attributes width="1" height
    </ui:with>

    <container:VerticalLayoutContainer>
        <container:child>
            <button:ButtonBar>
                <button:child>
                    <g:Label text="Formula"/>
                </button:child>
                <button:child>
                    <button:TextButton text="+" ui:field="plusButton"/>
                </button:child>
                <button:child>
                    <button:TextButton text="-" ui:field="minusButton"/>
                </button:child>
                <button:child>
                    <button:TextButton text="*" ui:field="multiplyButton"/>
                </button:child>
                <button:child>
                    <button:TextButton text="/" ui:field="divideButton"/>
                </button:child>
            </button:ButtonBar>
        </container:child>
        <container:child>
            <gxt:ListView ui:field="list"/>
        </container:child>
        <container:child>
            <form:TextArea ui:field="formulaArea"/>
        </container:child>
    </container:VerticalLayoutContainer>
</ui:UiBinder>