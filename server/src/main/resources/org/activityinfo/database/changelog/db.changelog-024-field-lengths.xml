<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

  <changeSet author="alex" id="024-02">
    <comment>
      Removed limits on schema element names
    </comment>
    <modifyDataType tableName="project" columnName="name" newDataType="varchar(255)"/>
    <modifyDataType tableName="partner" columnName="name" newDataType="varchar(255)"/>
    <modifyDataType tableName="userdatabase" columnName="Name" newDataType="varchar(255)"/>
    <modifyDataType tableName="activity" columnName="Name" newDataType="varchar(255)"/>
    <modifyDataType tableName="attribute" columnName="Name" newDataType="varchar(255)"/>
  </changeSet>
  <changeSet author="alex" id="024-03">
    <comment>
      Removes length constraint on unit
    </comment>
    <modifyDataType tableName="indicator" columnName="units" newDataType="varchar(255)"/>
  </changeSet>

</databaseChangeLog>