<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .editable:hover{background-color:gray;}
        .editable .icon{display: none;}
        .editable:hover .icon {display: inherit;}
    </ui:style>

    <ui:with field="icons" type="org.activityinfo.ui.icons.Icons"/>
    <g:HTMLPanel>
        <h1 ui:field="headerElement" class="{style.editable}">
            <g:InlineLabel ui:field="headerLabel"/>
            <span class="{style.icon} {icons.edit}"/>
        </h1>
    </g:HTMLPanel>
</ui:UiBinder>