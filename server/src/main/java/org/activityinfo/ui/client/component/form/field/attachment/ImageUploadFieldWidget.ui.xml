<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
        >

  <ui:with field="i18n" type="org.activityinfo.i18n.shared.UiConstants"/>
  <ui:with field="icons" type="org.activityinfo.ui.icons.Icons"/>
  <ui:with field="style" type="org.activityinfo.ui.client.widget.loading.LoadingStylesheet"/>
  <ui:with field="bundle" type="org.activityinfo.ui.client.widget.loading.LoadingClientBundle"/>

  <g:FormPanel encoding="multipart/form-data" method="post" ui:field="formPanel">
    <g:HTMLPanel>

      <g:HTMLPanel addStyleNames="form-group">
        <g:FileUpload ui:field="fileUpload" name="file" visible="false"/>
        <g:HTMLPanel ui:field="loadingContainer" visible="false" height="200px">
          <img class="{style.indicator} {style.loading}" src="{bundle.loadingIcon.getSafeUri}" alt="Loading..."
               ui:field="loadingImage"/>
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="uploadFailed" addStyleNames="has-error" visible="false">
          <div class="help-block">
            <ui:text from="{i18n.uploadFailed}"/>
          </div>
        </g:HTMLPanel>

        <g:Button addStyleNames="close btn-link pull-right" ui:field="clearButton" text="Ã—" visible="false"/>

        <g:SimplePanel ui:field="imageContainer">
          <g:Image ui:field="image" visible="true" height="220px" width="100%" addStyleNames="img-thumbnail"/>
        </g:SimplePanel>

      </g:HTMLPanel>

      <g:HTMLPanel addStyleNames="form-group">
        <div class="center-block" style="width: 250px;">
          <span ui:field="browseButton" style="text-decoration: underline;cursor: pointer">
            <ui:text from="{i18n.browse}"/>
          </span>
          <span>
            <ui:text from="{i18n.orDropForFile}"/>
          </span>
          <span ui:field="downloadButton" class="pull-right hide" style="text-decoration: underline;cursor: pointer">
            <ui:text from="{i18n.download}"/>
          </span>
        </div>
      </g:HTMLPanel>

      <g:VerticalPanel ui:field="hiddenFieldsContainer"/>
    </g:HTMLPanel>
  </g:FormPanel>
</ui:UiBinder>