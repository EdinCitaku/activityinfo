<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:a="urn:import:org.activityinfo.ui.client.widget"
        >

  <ui:with field="i18n" type="org.activityinfo.i18n.shared.UiConstants"/>
  <ui:with field="icons" type="org.activityinfo.ui.icons.Icons"/>
  <ui:with field="style" type="org.activityinfo.ui.client.widget.loading.LoadingStylesheet"/>
  <ui:with field="bundle" type="org.activityinfo.ui.client.widget.loading.LoadingClientBundle"/>

  <g:FormPanel encoding="multipart/form-data" method="post" ui:field="formPanel">
    <g:HTMLPanel>

      <g:HTMLPanel addStyleNames="form-group">

        <g:HTMLPanel ui:field="loadingContainer" visible="false" height="200px">
          <img class="{style.indicator} {style.loading}" src="{bundle.loadingIcon.getSafeUri}" alt="Loading..."
               ui:field="loadingImage"/>
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="uploadFailed" addStyleNames="has-error" visible="false">
          <div class="help-block">
            <ui:text from="{i18n.uploadFailed}"/>
          </div>
        </g:HTMLPanel>

        <g:Button addStyleNames="btn btn-link pull-right" ui:field="clearButton" visible="false">
          <span class="{icons.remove}"/>
        </g:Button>
        <g:Button addStyleNames="btn btn-default btn-xs pull-right" ui:field="downloadButton">
          <span class="{icons.arrowDown}"/>
        </g:Button>

        <g:HTMLPanel ui:field="imageContainer">
          <g:FileUpload ui:field="fileUpload" name="file" addStyleNames="dropFileUpload" visible="false" width="100%" height="210px"/>
          <g:Image ui:field="image" visible="true" width="100%" addStyleNames="img-thumbnail"/>
        </g:HTMLPanel>

      </g:HTMLPanel>

      <g:HTMLPanel addStyleNames="form-group">
        <div class="center-block" style="width: 70px;">
          <a:Button style="LINK" ui:field="browseButton">
            <ui:text from="{i18n.browse}"/>
          </a:Button>
        </div>
      </g:HTMLPanel>

      <g:VerticalPanel ui:field="hiddenFieldsContainer"/>
    </g:HTMLPanel>
  </g:FormPanel>
</ui:UiBinder>