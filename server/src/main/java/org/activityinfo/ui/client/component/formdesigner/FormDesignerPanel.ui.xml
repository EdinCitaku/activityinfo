<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:a="urn:import:org.activityinfo.ui.client.widget"
             xmlns:properties="urn:import:org.activityinfo.ui.client.component.formdesigner.properties"
             xmlns:header="urn:import:org.activityinfo.ui.client.component.formdesigner.header"
             xmlns:palette="urn:import:org.activityinfo.ui.client.component.formdesigner.palette"
        >

  <ui:with field="i18n" type="org.activityinfo.i18n.shared.UiConstants"/>
  <ui:with field="style" type="org.activityinfo.ui.client.component.formdesigner.FormDesignerStyles"/>

  <g:HTMLPanel ui:field="containerPanel">
    <br/>
    <div class="row">
      <div class="col-xs-4">
        <g:HTMLPanel height="100%">
          <g:HTML ui:field="spacer" width="100%" height="0px"/>
          <ul class="nav nav-tabs">
            <li role="presentation" class="active" ui:field="propertiesTabLi">
              <g:Anchor href="javascript:" ui:field="propertiesTabLink">
                <b>
                  <ui:text from='{i18n.fieldProperties}'/>
                </b>
              </g:Anchor>
            </li>
            <li role="presentation" ui:field="containerPropertiesTabLi">
              <g:Anchor href="javascript:" ui:field="containerPropertiesTabLink">
                <b>
                  <ui:text from='{i18n.containerProperties}'/>
                </b>
              </g:Anchor>
            </li>
          </ul>

          <!-- Field properties tab-->
          <g:HTMLPanel ui:field="propertiesTab" addStyleNames="panel panel-default">
            <div class="panel-body">
              <properties:PropertiesPanel ui:field="propertiesPanel"/>
            </div>
          </g:HTMLPanel>

          <!-- Container properties tab-->
          <g:HTMLPanel ui:field="containerPropertiesTab" addStyleNames="panel panel-default" visible="false">
            <div class="panel-body">
              <properties:ContainerPropertiesPanel ui:field="containerPropertiesPanel"/>
            </div>
          </g:HTMLPanel>
        </g:HTMLPanel>
      </div>

      <div class="col-xs-6">
        <g:HTMLPanel>
          <header:HeaderPanel ui:field="headerPanel"/>
          <g:FlowPanel addStyleNames="{style.mainPanel}" ui:field="dropPanel"/>
        </g:HTMLPanel>
      </div>

      <div class="col-xs-2">
        <g:HTMLPanel>
          <g:HTML ui:field="paletteSpacer" width="100%" height="0px"/>

          <div class="row">
            <!--<div class="col-xs-2">-->
            <a:Button style="PRIMARY" ui:field="saveButton" text="{i18n.save}"/>
            <!--</div>-->
            <!--<div class="col-xs-10">-->
            <g:HTML ui:field="statusMessage"/>
            <!--</div>-->
          </div>
          <br/>
          <div class="panel panel-default">
            <div class="panel-heading">
              <b>
                <ui:text from='{i18n.widgets}'/>
              </b>
            </div>
            <div class="panel-body">
              <palette:FieldPalette ui:field="fieldPalette" width="350px"/>
            </div>
          </div>
        </g:HTMLPanel>
      </div>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>