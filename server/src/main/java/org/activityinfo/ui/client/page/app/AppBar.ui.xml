<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.activityinfo.ui.client.page.app"
    >
  <ui:with field="resources" type="org.activityinfo.ui.client.page.app.resources.AppFrameResources"/>
  <ui:with field="clientContext" type="org.activityinfo.ui.client.ClientContext"/>

  <ui:data field="backgroundImage" src="resources/background.gif"/>
  <ui:data field="gearImage" src="resources/gear.png"/>

  <ui:style>
    @url backgroundUrl backgroundImage;
    @url gearUrl gearImage;
    @url helpUrl helpImage;
    @url searchUrl searchImage;

    .bar {
      background: #dfe8f6 repeat-x top;
      position: relative;
    }

    .bottomLip {
      border-top: 1px solid #99BBE8;
      background: #dfe8f6;
    }

    .leftPanel {
      position: relative;
    }

    .logo {
      float: left;
      font-family: tahoma, arial, verdana, sans-serif;
      font-size: 20px;
      font-weight: bold;
      color: #A6854A;
      padding-left: 12px;
      padding-top: 8px;
      margin-right: 15px;
      cursor: pointer;
    }

    .rightPanel {
      position: relative;
    }

    .icon {
      width: 16px;
      height: 16px;
      background: no-repeat center bottom;
      padding-top: 12px;
      float: right;
      margin-right: 15px;
      cursor: pointer;
    }

    .settingsIcon {
      background-image: gearUrl;
      width: 17px;
    }

  </ui:style>
  <g:LayoutPanel styleName="{style.bar}">
    <g:layer width='100%' bottom='0px' height='3px'>
      <g:HTML styleName="{style.bottomLip}"/>
    </g:layer>
    <g:layer bottom='2px' height='35px'>
      <g:HTMLPanel styleName="{style.leftPanel}">
        <g:Label text="{clientContext.getAppTitle}" styleName="{style.logo}"
                 ui:field="logo"/>
        <b:SectionTabStrip ui:field="sectionTabStrip"/>
        <g:Label styleName="{style.icon} {style.settingsIcon}"
                 ui:field="settingsButton"/>

      </g:HTMLPanel>
    </g:layer>

  </g:LayoutPanel>
</ui:UiBinder> 