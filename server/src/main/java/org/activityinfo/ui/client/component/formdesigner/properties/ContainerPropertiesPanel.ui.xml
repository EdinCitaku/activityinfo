<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:a="urn:import:org.activityinfo.ui.client.widget"
             xmlns:f="urn:import:org.activityinfo.ui.client.widget.form"
        >

  <ui:with field="i18n" type="org.activityinfo.i18n.shared.UiConstants"/>
  <ui:with field="style" type="org.activityinfo.ui.client.component.formdesigner.FormDesignerStyles"/>

  <g:HTMLPanel width="100%" ui:field="panel" addStyleNames="form-horizontal">

    <!-- Label -->
    <f:FormGroup ui:field="labelGroup" label="{i18n.label}" columnLabelWidth="4"
                 validationStateType="ERROR" validationMessage="{i18n.invalidLabel}" visible="false">
      <a:TextBox ui:field="label" width="100%"/>
    </f:FormGroup>

    <g:HTMLPanel ui:field="subformGroup">

      <!-- Subform kind -->
      <f:FormGroup ui:field="subformKindGroup" label="{i18n.type}" columnLabelWidth="4">
        <g:ListBox addStyleNames="form-control" multipleSelect="false" ui:field="subformKind"/>
      </f:FormGroup>

      <!-- Subform sub kind -->
      <f:FormGroup ui:field="subformSubKindGroup" label="{i18n.subType}" columnLabelWidth="4">
        <g:ListBox addStyleNames="form-control" multipleSelect="false" ui:field="subformSubKind"/>
      </f:FormGroup>

      <!-- Subform tab count -->
      <f:FormGroup ui:field="subformTabCountGroup" label="{i18n.tabCount}" columnLabelWidth="4">
        <a:DoubleBox ui:field="subformTabCount"/>
      </f:FormGroup>
    </g:HTMLPanel>
  </g:HTMLPanel>
</ui:UiBinder>